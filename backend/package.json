{
  "name": "@finance-tax-compliance/backend",
  "version": "1.0.0",
  "description": "Backend API for Finance & Tax Compliance System",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun dist/index.js",
    "test": "bun test --run",
    "test:watch": "bun test --watch",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "bun src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.0.0",
    "@elysiajs/swagger": "^1.0.0",
    "@elysiajs/jwt": "^1.0.0",
    "elysia": "^1.0.0",
    "drizzle-orm": "^0.29.0",
    "postgres": "^3.4.3",
    "decimal.js": "^10.4.0",
    "bcryptjs": "^2.4.3",
    "zod": "^3.22.0",
    "fast-check": "^3.15.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/pg": "^8.10.0",
    "drizzle-kit": "^0.20.0",
    "bun-types": "^1.1.0"
  }
}